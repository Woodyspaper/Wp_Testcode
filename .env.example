# CounterPoint Database Configuration
CP_SQL_SERVER=ADWPC-MAIN
CP_SQL_DATABASE=WOODYS_CP
CP_SQL_DRIVER=ODBC Driver 18 for SQL Server
CP_SQL_TRUSTED_CONN=true
# CP_SQL_USERNAME=  # Only if not using Windows Auth
# CP_SQL_PASSWORD=  # Only if not using Windows Auth
CP_SQL_TIMEOUT=30

# WooCommerce API Configuration
WOO_BASE_URL=https://your-site.com
WOO_CONSUMER_KEY=ck_your_consumer_key_here
